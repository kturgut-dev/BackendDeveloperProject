@model Form
    <form action="#">

        <div class="row p-3">
            @if (Model?.Fields != null)
            {
                foreach (FormField field in Model.Fields)
                {
                    <div class="form-group col-12 mt-2">
                        <label for="exampleInputEmail1">@field.Name</label>
                        <input type="@(field.DataType == "NUMBER" ? "number" :"text")" class="form-control" @(field.Required == true ? "required" : "") )>
                    </div>
                }
            }

        </div>

        <button type="submit" class="btn btn-primary  m-2">Kaydet</button>

    </form>

